{{#section 'jquery'}}
<script>
    $(document).ready(function() {
        var picFile, picFileType;
        //selecting the input type="file" here
        $(document).on('change', $('#picFiles'), function() {
            var picFiles = document.getElementById('picFiles').files;
            console.log(picFiles)

            picFile = picFiles[0];
            console.log(picFile);

            picFileType = picFile.type;
            var picFileName = picFile.name;
            console.log(picFile.type + ' ' + picFile.name);
        });

        $('#uploadForm').on('submit', function(evt) {
            evt.preventDefault();
            
            //this function should successfully handle uploading the picture to your backend Nodejs server
            $(this).ajaxSubmit({
                contentType: 'application/json',
                success: function(response) {
                    console.log('image uploaded and form submitted');
                }
            });
        });
    });

</script>
{{/section}}
